<div class="auth">
  <div class="auth-container">
    <div class="card">
      <h1 class="auth-title">
        <div class="logo logo_slide_remote">
          <img src="/images/logo/logo_slides_remote.svg">
        </div>
        Slide Remote
      </h1>
      <div class="auth-content">
        <p class="text-xs-center">Registro</p>

        <form id="signup-form" action="/user/create" method="POST">

          <div class="form-group">
            <label for="firstname">Username</label>
            <input type="text" class="form-control underlined" name="username" id="firstname" placeholder="tu nombre de usuario" required="true">
          </div>
          <div class="form-group"> <label for="email">Correo</label>
            <input type="email" class="form-control underlined" name="email" id="email" placeholder="tu@email.com" required="true">
          </div>
          <div class="form-group"> <label for="password">Contrase√±a</label>
            <input type="password" class="form-control underlined" name="password" id="password" placeholder="Enter password" required="true">
          </div>

          <% if(flash && flash.err){ %>
          <div class="text-xs-center">
            <% Object.keys(flash.err).forEach(function(error){ %>
            <div class="text-danger mg-bt-10"> <%- flash.err[error].message %> </div>
            <% }) %>
          </div>
          <% } %>

          <div class="form-group">
            <button type="submit" class="btn btn-block btn-primary">Registrarse</button>
          </div>


          <div class="form-group">
            <p class="text-muted text-xs-center">Ya tienes cuenta? <a href="/user/login">Accede!</a></p>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

