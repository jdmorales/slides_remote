  <link rel="stylesheet" href="/styles/admin/stylesheets/modular-admin/app-orange.css">
  <link rel="stylesheet" href="/styles/admin/stylesheets/modular-admin/vendor.css">
  <link rel="stylesheet" href="/styles/importer_general.css">

  <link rel="stylesheet" href="/bower_components/simple-line-icons/css/simple-line-icons.css">
  <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">

</head>

<body ng-app="adminSlidesRemote">

<div class="main-wrapper" ng-controller="adminController">

  <div class="app header-fixed sidebar-fixed" id="app" ng-class="{ 'sidebar-open' : openSideBar}">

    <header class="header">
      <div class="header-block header-block-collapse hidden-lg-up">
        <button ng-click="toggleSideBar()" class="collapse-btn" id="sidebar-collapse-btn">
          <i class="fa fa-bars"></i>
        </button>
      </div>

      <div class="header-block header-block-nav">
        <ul class="nav-profile">
          <li class="notifications new">
          </li>
          <li class="profile dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              <div class="img"><i class="icons icon-user"></i> </div> <span class="name">
    			      {{ user.username }}
    			    </span>
            </a>
            <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
              <!--a class="dropdown-item" href="#"> <i class="fa fa-user icon"></i> Profile </a>
              <a class="dropdown-item" href="#"> <i class="fa fa-bell icon"></i> Notifications </a>
              <a class="dropdown-item" href="#"> <i class="fa fa-gear icon"></i> Settings </a>
              <div class="dropdown-divider"></div-->
              <a class="dropdown-item" href="/auth/logout"> <i class="fa fa-power-off icon"></i> Logout </a>
            </div>
          </li>
        </ul>
      </div>
    </header>

    <aside class="sidebar">
      <div class="sidebar-container">
        <div class="sidebar-header">
          <div class="brand">
            <span class="logo logo_slide_remote">
              <img src="/images/logo/logo_slides_remote.svg">
            </span>
            <span>
              Slides remote
            </span>
          </div>
        </div>
        <nav class="menu">
          <ul class="nav metismenu" id="sidebar-menu">
            <li class="<%= document.currentView == 'liveSlides' ? 'active' : '' %>">
              <a href="/admin"> <i class="fa fa-users"></i> Presentaciones  </a>
            </li>
            <li class="<%= document.currentView == 'mySlides' ? 'active' : '' %>">
              <a href="/admin/my_slides"> <i class="fa fa-files-o"></i> Mis Presentaciones </a>
            </li>
            <li class="<%= document.currentView == 'createSlides' ? 'active' : '' %>">
              <a href="/admin/create_slides"> <i class="fa fa-files-o"></i> Crear Presentaci√≥n </a>
            </li>
          </ul>
        </nav>
      </div>
    </aside>

    <div class="sidebar-overlay" id="sidebar-overlay" ng-click="toggleSideBar()" ng-show="openSideBar"></div>

    <%- body %>

    <footer class="footer">
      <div class="footer-block buttons"> <iframe class="footer-github-btn" src="https://ghbtns.com/github-btn.html?user=jdmorales&amp;repo=slides_remote&amp;type=star&amp;count=true" frameborder="0" scrolling="0" width="140px" height="20px"></iframe> </div>
    </footer>

  </div>

</div>

<script src="/js/dependencies/sails.io.js"></script>

<script src="/bower_components/jquery/dist/jquery.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/bower_components/metisMenu/dist/metisMenu.min.js"></script>
<script src="/bower_components/angular/angular.min.js"></script>
<script src="/angular-admin/main_admin.js"></script>

<script>
  //System.import('app').catch(function(err){ console.error(err); });
</script>
</body>
</html>
